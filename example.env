# MedRAG Assistant Configuration

# LLM Configuration
LLM_MODEL_TYPE=mistral
LLM_MODEL_NAME=mistral-small
LLM_MODEL_URL=https://api.mistral.ai/v1
LLM_MODEL_API_KEY=
MAX_TOKENS=512
TEMPERATURE=0.1
LLM_TIMEOUT=30

# Document Processing
DOC_FILE_PATH=data/pdfs
DOC_LOADER_TYPE=PyMuPDF
DOC_EXTENSIONS=.pdf
DOC_TIMEOUT=30

# Document Source Configuration
# Options: local, s3
DOCUMENT_SOURCE=local

# S3/MinIO Configuration (used when DOCUMENT_SOURCE=s3)
S3_ENDPOINT=localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_NAME=medical-documents
S3_SECURE=false
S3_REGION=us-east-1

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Retrieval Configuration
EMBEDDING_DEVICE=cpu
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-small
SEMANTIC_MODEL_NAME=intfloat/multilingual-e5-small
RETRIEVAL_K=20
RETRIEVAL_RERANK_TOP_K=10
